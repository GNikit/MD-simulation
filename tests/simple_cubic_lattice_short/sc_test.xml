<?xml version='1.0' encoding='utf-8'?>
<input_variables>
  <setup>
    <steps>
      <integer_value rank="0">1</integer_value>
    </steps>
    <particles>
      <integer_value rank="1" shape="3">8 8 8</integer_value>
    </particles>
    <lattice name="SC"/>
    <iterative_method name="Verlet"/>
    <boundary_conditions name="Periodic"/>
    <rdf_bins>
      <integer_value rank="0">200</integer_value>
    </rdf_bins>
    <rdf_equilibrate>
      <integer_value rank="0">0</integer_value>
    </rdf_equilibrate>
  </setup>
  <io>
    <simulation_name>sc_test_</simulation_name>
    <output_dir>.</output_dir>
    <track_particles name="false"/>
    <energies name="true"/>
    <pressure name="true"/>
    <msd name="true"/>
    <vaf name="true"/>
    <sf name="true"/>
    <rdf name="true"/>
    <positions name="true"/>
  </io>
  <simulation_type name="NormalRun">
    <pair_potential name="BoundedInversePower">
      <density>
        <real_value rank="0">0.5</real_value>
      </density>
      <temperature>
        <real_value rank="0">1.0</real_value>
      </temperature>
      <potential_strength>
        <real_value rank="0">8</real_value>
      </potential_strength>
      <softening_parameter>
        <real_value rank="0">0.5</real_value>
      </softening_parameter>
    </pair_potential>
  </simulation_type>
  <enable_testing/>
</input_variables>
